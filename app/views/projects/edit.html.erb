<div id="header">
  <%= render "users/header" %>
</div>

<div class="container project_edit_container">

  <div class="row">
    <h1>Editing Project</h1>
  </div>

  <div class="row">
    
    <%= form_with(model: @project, local: true) do |form| %>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
          <% project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :プロジェクト名 %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :目標 %>
        <%= form.text_field :goal %>
      </div>

      <div class="field">
        <%= form.label :期間 %>
        <%= form.date_select :period %>~<%= form.date_select :end_of_period %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>

    <% end %>
  </div>

  <div class="row">
    <%= link_to 'Show', @project %> |
    <%= link_to 'Back', projects_path %>
  </div>
</div>
