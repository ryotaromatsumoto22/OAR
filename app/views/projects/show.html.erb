<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @project.user.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Goal:</strong>
  <%= @project.goal %>
</p>

<p>
  <strong>Period:</strong>
  <%= @project.period %>~<%= @project.end_of_period %>
</p>

<p>
  <strong>Level:</strong>
  <%= @project.level %>
</p>

<br>
グラフと詳細表
<br>
  <div class="col-xs-6">
    <% @project_for_graph.each do |project_id , data| %>
      <%= column_chart data %>
    <% end %>
  </div>

<% @project_data.each do |data| %>

  <p>
    <strong>Hour:</strong>
    <%= data.hour %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= data.date %>
  </p>
<% end %>

