<div id="header">
  <%= render "users/header" %>
</div>

<div class="container project_index_container">
  <div class="row">
    <h1>Projects</h1>
  </div>

  <br>

 <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <table>
        <thead>
          <tr class="table-light">
            <th>User</th>
            <th>Name</th>
            <th>Goal</th>
            <th>Period</th>
            <th></th>
            <th>Level</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.user_id %></td>
              <td><%= project.name %></td>
              <td><%= project.goal %></td>
              <td><%= project.period %>~</td>
              <td><%= project.end_of_period %></td>
              <td><%= project.level %></td>
              <td><%= link_to 'Show', project %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
              <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-1"></div>
  </div>

  <br>

  <div class="row">
    <%= link_to 'New Project', new_project_path %>
  </div>
</div>
