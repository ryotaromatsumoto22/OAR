<div id="header">
	<%= render "header" %>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-3", style="background-color: rgba(0, 0, 0, 0.1); height: 600px;">
			<div class="profile">
				<table class='table'>
      				<tr><%= attachment_image_tag(@user, :image, :fill, 150, 100, fallback: "no_image.jpg", size:'125×125') %></tr> 
      				<tr>
    	  				<th>name</th>
    	  				<th><%= @user.name %></th>
      				</tr>
      				<tr>
			    	  <th>introduction</th>
			    	  <th><%= @user.introduce %></th>
				    </tr>
      				<tr>
			    	  <th>level</th>
			    	  <th><%= @user.level %></th>
				    </tr>
      				<tr>
			    	  <th>モニュメント</th>
				    </tr>
				</table>
				<div class='row'>
  					<%= link_to '',edit_user_path(@user),class: "col-xs-10 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
				</div>
			</div>
		</div>

		<div class="col-xs-9", style="background-color: rgba(255, 20, 255, 0.1); height: 1000px;">
			<div class="main contents">
				<div class="col-xs-4">
				<%= column_chart Project.pluck(:date, :hour),
                 id: 'total-attendance-chart',
                 width: '400px',
                 height: '500px',
                 colors: ['#b00'] %>
             	</div>
			</div>
		</div>
	</div>
</div>
