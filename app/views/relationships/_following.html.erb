<% if current_user.following?(user) %>
	<%= link_to 'フォローを外す', unfollow_path(user.id), method: :POST, class: 'btn btn-default btn-block col-xs-12', remote: true %>
<% else %>
	<%= link_to 'フォローする', follow_path(user.id), method: :POST, class: 'btn btn-default btn-block col-xs-12', remote: true %>
<% end %>