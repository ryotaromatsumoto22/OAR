<div id="header">
  <%= render "users/header" %>
</div>

<div class="container sign-up">
  <br><h3 style="text-align: center">新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="row", style="margin-top: 40px;">
        <div class="col-xs-3">
        </div>
        <label class="col-xs-3">名前</label>
        <div class="col-xs-2">
          <%= f.text_field :name,autoforcus: true, autocomplete: "name" %>
        </div>
        <div class="col-xs-4">
        </div>
      </div><br>

      <div class="row">
        <div class="col-xs-3">
        </div>
        <label class="col-xs-3">メールアドレス</label>
        <div class="col-xs-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0", class: 'fa' %>
        </div>
        <div class="col-xs-4">
        </div>
      </div><br>

      <div class="row">
        <div class="col-xs-3">
        </div>
        <label class="col-xs-3">パスワード<br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-xs-2">
          <%= f.password_field :password, autocomplete: "encrypted_password",  placeholder: "\uf023", class: 'fa' %>
        </div>
        <div class="col-xs-4">
        </div>
      </div><br>


      <div class="row">
        <div class="col-xs-3">
        </div>
        <label class="col-xs-3">パスワード<br>（確認用）</label>
        <div class="col-xs-2">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password",  placeholder: "\uf023", class: 'fa' %>
        </div>
        <div class="col-xs-4">
        </div>
      </div><br>

      <div class="row actions">
        <div class="col-xs-6">
        </div>
        <div class="col-xs-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
        <div class="col-xs-4">
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
        </div>
        <div class="col-xs-6">
        <h4>既に登録済みの方</h4>
          <% if controller_name != 'sessions' %>
            <%= link_to "こちらからログインしてください", new_session_path(resource_name) %>
          <% end %>
        </div>
        <div class="col-xs-2">
        </div>
        <% end %>
      </div>
  </div>
</div>

<div class="footer">
  <%= render "tops/footer" %>
</div>
